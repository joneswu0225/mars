<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jones.mars.repository.CityMapper" >
    <insert id="insert" parameterType="City" useGeneratedKeys="true" keyProperty="id">
        insert into const_city(`name`, `province_id`)
        values(#{name}, #{provinceId})
    </insert>
    <insert id="update" parameterType="City">
        update const_city set name = #{name} where id=#{id}
    </insert>
    <select id="findList" resultType="City" parameterType="Query">
        <include refid="com.jones.mars.repository.BaseMapper.startPage" />
        select * from const_city
        order by name
        <include refid="com.jones.mars.repository.BaseMapper.endPage" />
    </select>
    <select id="findCount" resultType="java.lang.Integer" parameterType="Query">
        select count(*) from const_city
    </select>
    <select id="findAllName" resultType="java.lang.Object" parameterType="Query">
        select id, name from const_city
        order by name
    </select>
    <select id="findAll" resultType="City">
        select * from const_city order by name
    </select>
    <select id="findOne" resultType="City">
        select * from const_city where id=#{id}
    </select>
    <delete id="delete">
        delete from const_city where id=#{id}
    </delete>
</mapper>